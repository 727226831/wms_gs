<?xml version="1.0" encoding="utf-8"?>

                                                                
    
                 
                       
                                                                
           
    <RelativeLayout
        android:id="@+id/rl_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:tag="layout/item_dhsj_0" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
        <TextView
            android:layout_marginTop="15dp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:background="@mipmap/ic_round"
            android:id="@+id/tv_tag"
            android:src="@mipmap/ic_picture"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_toRightOf="@id/tv_tag"
            android:id="@+id/l_input"
            android:orientation="horizontal"
            android:layout_margin="@dimen/layout_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:tag="binding_1"          
                        android:layout_weight="1"
                        android:id="@+id/tv_title1"
                        style="@style/item_small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:tag="binding_2"          
                        android:layout_weight="1"
                        android:id="@+id/tv_title2"
                        style="@style/item_small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1"
                        android:tag="binding_3"          
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_title3"

                        style="@style/item_small"/>
                    <TextView
                        android:visibility="gone"
                        android:layout_weight="1"
                        android:tag="binding_4"           
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_title4"
                        style="@style/item_small"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1"
                        style="@style/item_small"
                        android:id="@+id/tv_title5"
                        android:tag="binding_5"          
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:tag="binding_6"          
                        android:layout_weight="3"
                        android:id="@+id/tv_title6"
                        style="@style/item_small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1"
                        style="@style/item_small"
                        android:id="@+id/tv_title7"
                        android:tag="binding_7"          
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textColor="@color/blue"
                        android:tag="binding_8"          
                        android:layout_weight="3"
                        android:id="@+id/tv_title8"
                        style="@style/item_small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>




            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:padding="20dp"
            android:id="@+id/iv_select"
            android:layout_marginRight="10dp"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
         